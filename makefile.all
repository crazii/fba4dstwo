#
#
#	Rule for linking the executable
#
#

ifeq ($(MAKELEVEL),2)

$(NAME):	$(allobj)
	@echo
	@echo Linking executable... $(NAME)
	@$(LD) $(CFLAGS) $(LDFLAGS) -o $@ $^ $(lib)
	@echo Creating PSP EBOOT.PBP...
	@$(FIXUP) $@
	@psp-strip $(NAME) -o eboot_strip.elf
	@mksfoex -d MEMSIZE=1 'FinalBurn Alpha for PSP' eboot.sfo
	@pack-pbp ${BINDIR}/EBOOT.PBP eboot.sfo $(srcdir)psp/fbapsp_all.png NULL NULL NULL NULL eboot_strip.elf NULL
	-@rm -f eboot.sfo eboot_strip.elf


ifdef	DEBUG

#	Don't compress when making a debug build

else
ifdef	COMPRESS
	@upx --best $@
endif
endif
endif

